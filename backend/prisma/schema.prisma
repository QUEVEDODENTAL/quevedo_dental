// schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Definición de modelo para Doctor
model Doctor {
  id                   Int       @id @default(autoincrement())
  nombre               String
  apellido             String
  edad                 Int?
  fecha_nacimiento     DateTime?
  genero               String
  especialidad         String?
  direccion            String?
  telefono             String
  celular              String
  curp                 String
  cedula               String
  sexo                 String?
  licencia_medica      String?
  correo_electronico   String
}

// Definición de modelo para Empleado
model Empleado {
  id                   Int       @id @default(autoincrement())
  nombre               String
  apellido             String
  fecha_nacimiento     DateTime?
  genero               String
  telefono             String
  correo_electronico   String
  direccion            String?
  puesto               String?
  curp                 String
  rfc                  String
  salario              Float?
  fecha_contratacion   DateTime?
}

// Definición de modelo para Cliente
model Cliente {
  id                   Int       @id @default(autoincrement())
  nombre               String
  apellido             String
  sexo                 String
  edad                 Int
  fecha_nacimiento     DateTime?
  domicilio            String
  telefono             String
  curp                 String
  correo_electronico   String
  tipo_sangre          String
  ocupacion            String
  escolaridad          String
}

// Definición de modelo para HistorialClinico
model HistorialClinico {
  id                   Int       @id @default(autoincrement())
  cliente_id           Int
  dentista_id          Int
  fecha_consulta       DateTime?
  datos_clinicos       Json
}

// Definición de modelo para Enfermedad
model Enfermedad {
  id_enfermedad        Int       @id @default(autoincrement())
  tipo                 String
  otro                 String?
  causas               String
  sintomas             String
  tratamiento          String
}

// Definición de modelo para AntecedentesNoPatologicos
model AntecedentesNoPatologicos {
  id_paciente          Int       @id
  tabaquismo           String
  toxicomanias         String
  alcoholismo          String
  sedentarismo         String
  cirugias             String?
  ejercicio            String?
}

// Definición de modelo para AntecedentesPatologicos
model AntecedentesPatologicos {
  id_paciente          Int       @id
  enfermedad           String
  fecha_diagnostico    DateTime
  tipo_enfermedad      String
  cronica              String
  tratamiento          String?
  observaciones        String?
}

// Definición de modelo para ExamenClinicoIntraoral
model ExamenClinicoIntraoral {
  id_paciente          Int       @id
  fecha_examen         DateTime
  encia                String
  lengua               String
  paladar_duro         String
  paladar_blando       String
  faringe              String
  piso_de_la_boca      String
  reborde_residual     String
  tipo_oclusion        String
  observaciones        String?
}

// Definición de modelo para Permiso
model Permiso {
  id              Int       @id @default(autoincrement())
  permiso         String
  descripcion     String
}
model User {
  id            Int       @id @default(autoincrement())
  nombreusuario String    @unique
  password      String
  rolusuario    String
  fechacreacion DateTime? @default(now())
}

// Definición de modelo para Bitacora
model Bitacora {
  id              Int       @id @default(autoincrement())
  fecha_hora      DateTime  @default(now())
  usuario         String
  accion          String
  tabla           String?
  id_registro     Int?
  descripcion     String?
}
